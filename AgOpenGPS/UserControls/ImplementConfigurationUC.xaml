                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />

                        </Grid.RowDefinitions>
                        <ToggleButton
                         x:Name="tgWorkSwitch1"
                         MinWidth="100"
                         Margin="20,10"
